<ivy-module version="2.0"
   xmlns:m="http://ant.apache.org/ivy/maven"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

   <info organisation="org.eclipse.stardust.engine" module="carnot-ejb3-module"
      revision="${ipp.version.full}" />

   <configurations>
      <conf name="ejb3-module-compile" extends="ejb3-provider-compile" description="IPP Engine - EJB3 Module - Compile Scope" />
      <conf name="ejb3-module-runtime" extends="ejb3-module-compile" description="IPP Engine - EJB3 Module - Runtime Scope" />
      <conf name="ejb3-module-provided" description="IPP Engine - EJB3 Module - Provided Scope" />
   
      <conf name="client-ejb3-module-runtime" description="IPP Engine - EJB3 Module for Client environments"/>
      
      <conf name="ejb3-provider-compile" visibility="private" />
      
      <!-- compound configurations which encapsulates the above mentioned configs -->
      <conf name="provided" visibility="private" extends="ejb3-module-provided" />
      <conf name="compile" visibility="private" extends="ejb3-module-compile,ejb3-provider-compile" />
      <conf name="runtime" visibility="private" extends="ejb3-module-runtime,client-ejb3-module-runtime" />
      <conf name="all" visibility="private" extends="provided, compile, runtime" />

      <conf name="module-pom" description="IPP Module POMs" />
   </configurations>

   <publications>
      <artifact name="ejb3-module" type="pom" conf="module-pom" ext="pom" />
      <artifact name="client-ejb3-module" type="pom" conf="module-pom" ext="pom" />
   </publications>

   <dependencies>
      <!-- client-ejb3-module-runtime, ejb3-provider-compile -->
      <dependency org="org.eclipse.stardust" name="stardust-engine-ejb3" rev="${ipp.version.full}" conf="client-ejb3-module-runtime,ejb3-provider-compile->carnot-ejb3-compile">
         <exclude org="rhino" module="js" />
      </dependency>
            
      <!-- ejb3-module-compile -->
      <dependency org="javax.ejb" name="ejb-api" rev="3.0" conf="ejb3-module-compile->default" />      
   	  <dependency org="javax.jms" name="jms" rev="${jms.version}"  conf="ejb3-module-compile->default" />
   	              
      
      <!-- client-ejb3-module-runtime -->
      <dependency org="org.eclipse.stardust.engine" name="infinity-process-engine-module" rev="${ipp.version.full}" conf="client-ejb3-module-runtime->client-module-runtime">
         <exclude org="rhino" module="js" />
      </dependency>
      <dependency org="org.eclipse.stardust.engine" name="stardust-engine-base-module" rev="${ipp.version.full}" conf="client-ejb3-module-runtime->logging-log4j-module-runtime"/>

      <!-- ******************** -->
      <!--    Override Rules    -->
      <!-- ******************** -->
      <override org="commons-logging" module="commons-logging" rev="${commons-logging.version}" />
      <override org="aopalliance" module="aopalliance" rev="${aopalliance.version}" />
   </dependencies>
</ivy-module>
