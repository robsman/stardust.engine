<!-- Application context for a local Spring configuration of the Stardust Engine. -->
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <!-- Stardust Engine Application Context -->
   <import resource="classpath:stardust-local.app-ctx.xml" />

   <!-- Forking Service Mode: Native Threading -->
   <import resource="classpath:stardust-local-forking-native-threading.app-ctx.xml" />
</beans>
