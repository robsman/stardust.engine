<ivy-module version="2.0"
   xmlns:m="http://ant.apache.org/ivy/maven"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

   <info organisation="org.eclipse.stardust.engine" module="stardust-engine-ws-cxf-module" revision="${ipp.version.full}" />

   <configurations>
      <conf name="jax-ws-cxf-module-compile" extends="jax-ws-cxf-provider-compile" description="EPM Engine - WS CXF Module - Compile Scope" />
      <conf name="jax-ws-cxf-module-provided" description="EPM Engine - WS CXF Module - Provided Scope" />
      <conf name="jax-ws-cxf-module-runtime" extends="jax-ws-cxf-module-compile, jax-ws-cxf-provider-runtime" description="EPM Engine - WS CXF Module - Runtime Scope" />

      <conf name="jax-ws-cxf-provider-compile" visibility="private" />
      <conf name="jax-ws-cxf-provider-runtime" visibility="private" />

      <conf name="jax-rs-cxf-module-compile" extends="jax-rs-cxf-provider-compile" description="EPM Engine - JAX-RS CXF Module - Compile Scope" />
      <conf name="jax-rs-cxf-module-runtime" extends="jax-rs-cxf-module-compile, jax-rs-cxf-provider-runtime" description="EPM Engine - JAX-RS CXF Module - Runtime Scope" />

      <conf name="jax-rs-cxf-provider-compile" visibility="private" />
      <conf name="jax-rs-cxf-provider-runtime" visibility="private" />

      <!-- compound configurations which encapsulates the above mentioned configs -->
      <conf name="provided" extends="jax-ws-cxf-module-provided" visibility="private" />
      <conf name="compile" extends="jax-ws-cxf-module-compile,jax-ws-cxf-provider-compile,jax-rs-cxf-module-compile,jax-rs-cxf-provider-compile" 
         visibility="private" />
      <conf name="runtime" extends="jax-ws-cxf-module-runtime,jax-ws-cxf-provider-runtime,jax-rs-cxf-module-runtime,jax-rs-cxf-provider-runtime" 
         visibility="private" />

      <conf name="all" extends="compile, runtime, provided" visibility="private" />


      <conf name="module-pom" description="EPM Module POMs" />
   </configurations>

   <publications>
      <artifact name="jax-ws-cxf-module" type="pom" conf="module-pom" ext="pom" />
      <artifact name="jax-rs-cxf-module" type="pom" conf="module-pom" ext="pom" />
   </publications>

   <dependencies>
      <dependency org="org.eclipse.stardust.engine" name="stardust-engine-ws-cxf" rev="${ipp.version.full}" conf="jax-ws-cxf-provider-compile, jax-rs-cxf-provider-compile->stardust-engine-ws-cxf-compile"/>

      <!-- jax-ws-cxf-provider-compile -->
      
      <dependency org="org.apache.cxf" name="cxf-api" rev="${cxf-api.version}" conf="jax-ws-cxf-provider-compile->default" >
         <exclude org="org.apache.geronimo.specs" module="geronimo-javamail_1.4_spec" />
         <exclude org="org.codehaus.woodstox" module="woodstox-core-asl" />
      </dependency>
      <dependency org="org.apache.cxf" name="cxf-rt-core" rev="${cxf-rt-core.version}" conf="jax-ws-cxf-provider-compile->default" >
         <exclude org="org.apache.geronimo.specs" module="geronimo-javamail_1.4_spec" />
         <exclude org="org.apache.cxf" module="cxf-api" />
      </dependency>
      <dependency org="org.apache.cxf" name="cxf-rt-frontend-jaxws" rev="${cxf-rt-frontend-jaxws.version}" conf="jax-ws-cxf-provider-compile->default">
         <exclude org="org.apache.cxf" module="cxf-api" />
         <exclude org="xml-resolver" module="xml-resolver" />
      </dependency>
      <dependency org="org.apache.cxf" name="cxf-rt-bindings-soap" rev="${cxf-rt-bindings-soap.version}" conf="jax-ws-cxf-provider-compile->default">
         <exclude org="org.apache.cxf" module="cxf-api" />
      </dependency>
      <dependency org="org.apache.cxf" name="cxf-rt-databinding-jaxb" rev="${cxf-rt-databinding-jaxb.version}" conf="jax-ws-cxf-provider-compile->default">
         <exclude org="org.apache.cxf" module="cxf-api" />
      </dependency>
      <dependency org="org.apache.cxf" name="cxf-rt-transports-http" rev="${cxf-rt-transports-http.version}" conf="jax-ws-cxf-provider-compile->default">
         <exclude org="org.apache.cxf" module="cxf-api" />
      </dependency>
      <dependency org="org.apache.cxf" name="cxf-rt-ws-addr" rev="${cxf-rt-ws-addr.version}" conf="jax-ws-cxf-provider-compile->default">
         <exclude org="org.apache.cxf" module="cxf-api" />
      </dependency>
      <dependency org="org.apache.cxf" name="cxf-rt-ws-policy" rev="${cxf-rt-ws-policy.version}" conf="jax-ws-cxf-provider-compile->default">
         <exclude org="org.apache.cxf" module="cxf-api" />
      </dependency>
      <dependency org="org.apache.cxf" name="cxf-rt-ws-security" rev="${cxf-rt-ws-security.version}" conf="jax-ws-cxf-provider-compile->default" >
         <exclude org="org.apache.cxf" module="cxf-api" />
      	<exclude org="org.slf4j" module="slf4j-api" />
      	<exclude org="org.apache.santuario" module="xmlsec" />
      	<exclude org="org.opensaml" module="opensaml" />
      </dependency>
      <dependency org="org.apache.santuario" name="xmlsec" rev="${xmlsec.version}" conf="jax-ws-cxf-provider-compile->default" />

      <!-- jax-ws-cxf-provider-runtime -->  
      <dependency org="com.sun.xml.messaging.saaj" name="saaj-impl" rev="${saaj-impl.version}" conf="jax-ws-cxf-provider-runtime->default" >
         <exclude org="activation" module="activation" />
         <exclude org="javax.xml.soap" module="saaj-api" />
      </dependency>
      
      <!-- jax-rs-provider-compile -->
      <dependency org="javax.ws.rs" name="jsr311-api" rev="${jsr311-api.version}" conf="jax-rs-cxf-provider-compile->default" />
      
      <!-- jax-rs-provider-runtime -->
      <dependency org="org.apache.cxf" name="cxf-rt-frontend-jaxrs" rev="${cxf-rt-frontend-jaxrs.version}" conf="jax-rs-cxf-provider-runtime->default" >
         <exclude org="org.apache.cxf" module="cxf-api" />
         <exclude org="javax.ws.rs" module="jsr311-api" />
         <exclude org="org.codehaus.woodstox" module="woodstox-core-asl" />
         <exclude org="org.apache.geronimo.specs" module="geronimo-javamail_1.4_spec" />
      </dependency>

      <!-- ******************** -->
      <!--    Override Rules    -->
      <!-- ******************** -->
      <override org="com.sun.xml.bind" module="jaxb-xjc" rev="${jaxb-xjc.version}" />
      <override org="com.sun.xml.bind" module="jaxb-impl" rev="${jaxb-impl.version}" />
      <override org="commons-logging" module="commons-logging" rev="${commons-logging.version}" />
      <override org="asm" module="asm" rev="${asm.version}" />
   </dependencies>
</ivy-module>
